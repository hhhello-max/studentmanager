<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pjpy.studentManager.mapper.CandidateMapper">

    <resultMap type="com.pjpy.studentManager.domain.Candidate" id="CandidateInfo">
        <result column="id"          property="id"/>
        <result column="sn"          property="sn"/>
        <result column="username"    property="username"/>
        <result column="grade"       property="grade"/>
    </resultMap>

    <select id="queryList" resultMap="CandidateInfo" >
        <!-- 根据条件查询所有信息 -->
        SELECT *
        from sys_candidate
        limit #{startIndex},#{pagesize}
    </select>

    <select id="queryCount" resultType="int" >
        select count(*) from sys_candidate
        <where>
            <if test="sn!=null"> and sn = #{sn} </if>
        </where>
    </select>

    <insert id="addCandidate" parameterType="Candidate">
        insert into sys_candidate(sn,username,grade)
        values(#{sn},#{username},#{grade})
    </insert>

    <delete id="deleteCandidate" parameterType="int">
        delete from sys_candidate where id = #{id}
    </delete>

    <select id="isCandidate" parameterType="string" resultType="Candidate">
        select * from sys_candidate where sn = #{sn}
    </select>
    <select id="getGrade" parameterType="string" resultType="java.lang.Double">
        select grade from sys_candidate where sn = #{sn}
    </select>

    <update id="editCandidate" parameterType="Candidate">
        update  sys_candidate set sn = #{sn},course = #{course},score = #{score}, where id = #{id}
    </update>

</mapper>